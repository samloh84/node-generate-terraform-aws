// Create Internet Gateway
// https://www.terraform.io/docs/providers/aws/r/internet_gateway.html
resource "aws_internet_gateway" "igw" {
    vpc_id = "${aws_vpc.main.id}"

    tags = {
        Name = "${var.vpc_name}_igw"
        VPC = "${var.vpc_name}"
        Owner = "${var.vpc_owner}"
    }
}

// Create Route Table for Public Subnets
// https://www.terraform.io/docs/providers/aws/r/default_route_table.html
resource "aws_route_table" "public_rt" {
    vpc_id = "${aws_vpc.main.id}"

    tags = {
        Name = "${var.vpc_name}_public_rt"
        VPC = "${var.vpc_name}"
        Owner = "${var.vpc_owner}"
    }
}

// https://www.terraform.io/docs/providers/aws/r/route.html
resource "aws_route" "public_ipv4" {
    route_table_id            = "${aws_route_table.public_rt.id}"
    destination_cidr_block    = "0.0.0.0/0"
    gateway_id = "${aws_internet_gateway.igw.id}"
}

// https://www.terraform.io/docs/providers/aws/r/route.html
resource "aws_route" "public_ipv6" {
    route_table_id            = "${aws_route_table.public_rt.id}"
    destination_ipv6_cidr_block    = "::/0"
    gateway_id = "${aws_internet_gateway.igw.id}"
}

// Associate Public Route Table with Public Subnets
{%- for public_network_tier in public_network_tiers %}
{%- for availability_zone in availability_zones %}

// https://www.terraform.io/docs/providers/aws/r/route_table_association.html
resource "aws_route_table_association" "public_{{ public_network_tier }}_tier_{{ availability_zone }}" {
    subnet_id = "${aws_subnet.{{ public_network_tier }}_tier_{{ availability_zone }}.id}"
    route_table_id = "${aws_route_table.public.id}"
}
{% endfor %}
{% endfor %}
